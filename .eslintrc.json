{
    "extends": ["airbnb-typescript/base", "plugin:jest/recommended", "prettier"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/indent": ["error", 4],
        "max-len": ["error", { "code": 120 }],
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": {
                    "minProperties": 5,
                    "multiline": true,
                    "consistent": true
                },
                "ObjectPattern": {
                    "minProperties": 5,
                    "multiline": true,
                    "consistent": true
                }
            }
        ]
    },
    "plugins": ["import", "jest"],
    "env": {
        "jest/globals": true
    }
}
